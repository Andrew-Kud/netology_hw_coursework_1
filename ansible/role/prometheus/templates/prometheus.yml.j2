global:
  scrape_interval: 15s
  scrape_timeout: 10s
  evaluation_interval: 15s



alerting:
  alertmanagers:
    - static_configs:
        - targets: []



scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']

  - job_name: 'node_exporter'
    scrape_interval: 15s
    scrape_timeout: 10s
    static_configs:
      - targets: ['{{ hostvars["web-d"]["ansible_host"] }}:9100']
        labels:
          server: 'web-d'
          zone: 'ru-central1-d'
          environment: 'production'

      - targets: ['{{ hostvars["web-b"]["ansible_host"] }}:9100']
        labels:
          server: 'web-b'
          zone: 'ru-central1-b'
          environment: 'production'



  - job_name: 'nginx_exporter'
    scrape_interval: 15s
    scrape_timeout: 10s
    static_configs:
      - targets: ['{{ hostvars["web-d"]["ansible_host"] }}:4927']
        labels:
          server: 'web-d'
          zone: 'ru-central1-d'

      - targets: ['{{ hostvars["web-b"]["ansible_host"] }}:4927']
        labels:
          server: 'web-b'
          zone: 'ru-central1-b'



  - job_name: 'prometheus_node'
    scrape_interval: 15s
    static_configs:
      - targets: ['localhost:9100']
        labels:
          server: 'prometheus'
          zone: 'ru-central1-a'
          environment: 'production'
